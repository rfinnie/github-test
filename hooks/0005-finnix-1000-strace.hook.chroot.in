PATH="/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin"

strace -v -qq -yy -s 65535 -p $$ -f -e open,openat,execve -o /var/log/finnix-strace-init.trace &
